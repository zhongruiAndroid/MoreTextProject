<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MoreTextLayout_Layout">
        <attr name="layout_type" format="integer">
            <flag name="content" value="1" />
            <flag name="expand" value="2" />
            <flag name="collapse" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MoreTextLayout">
        <attr name="useAnim" format="boolean" />
        <attr name="animDuration" format="integer" />
        <attr name="expand" format="boolean" />
        <attr name="minLine" format="integer" />
        <attr name="ellipsis" format="string" />
        <attr name="collapseTipsGravity" format="integer">
            <flag name="right" value="0">left</flag>
            <flag name="left" value="1">left</flag>
        </attr>
        <attr name="collapseTipsHidden" format="boolean" />
        <attr name="collapseTipsNewLine" format="boolean" />
    </declare-styleable>
</resources>